@import url('https://fonts.googleapis.com/css?family=Open+Sans:400i')

font = 'Open Sans', sans-serif;

body-background = #AEB6BF
table-background = #EBEDEF
button-background = #283747
text-color = table-background
base-font-size = 17px

body
    margin 0
    padding 2% 15% 2% 15%
    background-color body-background 
    box-sizing border-box
    color text-color
    font-size base-font-size
    font-family font
    -webkit-text-size-adjust 100%
    -webkit-font-smoothing antialiased

tr
    border-top 1px solid body-background
    box-shadow 0 16px 24px 0 rgba(0,0,0,0.12),
                0 2px 16px 0 rgba(0,0,0,0.08);

td, th
    box-shadow 0 16px 24px 0 rgba(0,0,0,0.12),
                0 2px 16px 0 rgba(0,0,0,0.08);
    
table, thead, tbody
    font-family font
    border none
    border-collapse collapse
    text-align center
    box-shadow 0 32px 48px 0 rgba(0,0,0,0.12),
                0 8px 32px 0 rgba(0,0,0,0.08);
    width 100%
    margin 2% auto 0
    color text-color

#loadingSVG
    width 10%
    margin 30% auto

#userInput
    width 100%
    margin 0 auto

h1  
    margin-bottom 6%
    text-align center
    font-family font

form
    width 95%
    margin 0 auto

input, select
    margin-right 1.2%
    text-decoration none
    display inline-block
    border 1px solid  #F4F6F7
    font-size 14px
    padding 5px 7px
    border-radius 3px 3px 3px 3px

button
    font-family font 
    border-radius 3px 3px 3px 3px
    background-color button-background
    border none
    color #F4F6F7
    padding 5px 7px
    text-align center
    text-decoration none
    display inline-block
    font-size 14px
    margin 4px 8px 4px 8px
    cursor pointer

#pagination
    display flex
    width 70%
    margin auto

#pagination > div
    font-family font
    margin auto
    text-align center
