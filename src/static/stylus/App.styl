body-background = #AEB6BF
table-background = #EBEDEF
button-background = #283747
text-color = button-background
base-font-size = 17px

body
    margin 0
    padding 2% 15% 2% 15%
    background-color body-background 
    box-sizing border-box
    color text-color
    font-size base-font-size
    font-family Avenir
    -webkit-text-size-adjust 100%
    -webkit-font-smoothing antialiased

tr
    border-top 3px solid body-background
    height 40%
    // border-bottom 3px solid body-background

td, th
    width 200px
    border 1px solid black

table, thead, tbody
    border none
    border-collapse: collapse
    text-align center
    // border-radius 15px 15px 15px 15px
    box-shadow: 0 32px 48px 0 rgba(0,0,0,0.12),
                0 8px 32px 0 rgba(0,0,0,0.08);
    background-color table-background
    width 100%
    margin 2% auto 0
    color button-background

#loadingSVG
    width 10%
    margin 30% auto

#userInput
    // width 100%
    // padding 0 8%
    margin 0 auto

h1
    text-align center

form
    width 95%
    margin 0 auto
    // padding 0 2% 0

input, select
    margin-right 1.2%
    text-decoration none
    display inline-block
    border 1px solid  #F4F6F7
    font-size 14px
    padding 5px 7px
    border-radius: 3px 3px 3px 3px

button
    border-radius: 3px 3px 3px 3px
    background-color button-background
    // border 1px solid  #F4F6F7
    border none
    color #F4F6F7
    padding 5px 7px
    text-align center
    text-decoration none
    display inline-block
    font-size 14px
    margin 4px 8px 4px 8px
    cursor pointer

#pagination
    width 100%

span
    padding: 0 40% 0 40%